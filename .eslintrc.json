{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": [2, "always", {"omitLastInOneLineBlock": true}],
        "no-console": "warn",
        "no-extra-semi": "error",
        "no-extra-parens": "warn",
        "array-bracket-spacing": "error",
        "camelcase":"error",
        "max-len": "off",
        "valid-jsdoc": "off",
        "new-cap": "off",
        "brace-style": "off"
    }
}
